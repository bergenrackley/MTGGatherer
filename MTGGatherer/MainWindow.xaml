<Window x:Class="MTGGatherer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTGGatherer"
        mc:Ignorable="d"
        Title="MTGGatherer" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="10 00 0 0">MTGO Formatted Text</Label>
        <TextBox Grid.Row="1" Name="DeckText" VerticalScrollBarVisibility="Auto" VerticalAlignment="Stretch" Margin="10" AcceptsReturn="True" TextWrapping="Wrap"/>
        <DataGrid Grid.Row="1" Grid.Column="1" Margin="10" AutoGenerateColumns="True" Name="DeckLoadTable" IsReadOnly="True"></DataGrid>
        <Button Grid.Row="2" Margin="10" Click="Click_Parse" Name="ParseButton">Parse</Button>
    </Grid>
</Window>
